{
  "name": "platformio-node-helpers",
  "version": "8.1.0",
  "description": "Collection of Node.JS helpers for PlatformIO",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --env build",
    "dev": "webpack --progress --colors --watch --env dev",
    "lint": "eslint --ext js src || exit 0",
    "format": "prettier --single-quote --print-width 88 --write \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/platformio/platformio-node-helpers.git"
  },
  "keywords": [
    "PlatformIO",
    "IoT",
    "debug",
    "unittest",
    "embedded",
    "flash",
    "firmware",
    "arduino",
    "CMSIS",
    "ESP-IDF",
    "SPL",
    "mbed",
    "STM32Cube",
    "avr",
    "arm",
    "espressif",
    "esp8266",
    "esp32",
    "stm32",
    "pic32",
    "nRF51",
    "nRF52",
    "fpga",
    "verilog",
    "hardware",
    "serial",
    "monitor"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/platformio/platformio-node-helpers/issues"
  },
  "homepage": "http://platformio.org",
  "dependencies": {
    "cross-spawn": "~7.0.3",
    "glob": "~7.1.6",
    "jsonrpc-lite": "~2.1.1",
    "os-tmpdir": "*",
    "querystringify": "*",
    "request": "~2.88.2",
    "semver": "~7.3.2",
    "tar": "~6.0.5",
    "tcp-port-used": "~1.0.1",
    "tmp": "~0.2.1",
    "ws": "~7.4.0"
  },
  "devDependencies": {
    "@babel/core": "~7.12.3",
    "@babel/plugin-proposal-class-properties": "~7.12.1",
    "@babel/plugin-transform-classes": "~7.12.1",
    "@types/node": "~12",
    "babel-eslint": "~10.1.0",
    "babel-loader": "~8.2.1",
    "babel-preset-env": "~1.7.0",
    "eslint": "~7.13.0",
    "eslint-import-resolver-webpack": "~0.13.0",
    "eslint-plugin-import": "~2.22.1",
    "prettier": "~2.1.2",
    "webpack": "~5.4.0",
    "webpack-cli": "~4.2.0"
  }
}
