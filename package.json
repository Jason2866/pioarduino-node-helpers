{
  "name": "pioarduino-node-helpers",
  "version": "11.3.3",
  "description": "Collection of Node.JS helpers for PlatformIO fork pioarduino",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "webpack --env build",
    "dev": "webpack --progress --watch --env dev",
    "lint": "eslint --ext js src || exit 0",
    "format": "prettier --single-quote --print-width 88 --write \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pioarduino/pioarduino-node-helpers.git"
  },
  "keywords": [
    "PlatformIO",
    "pioarduino",
    "IoT",
    "debug",
    "unittest",
    "embedded",
    "flash",
    "firmware",
    "arduino",
    "ESP-IDF",
    "espressif",
    "esp8266",
    "esp32",
    "hardware",
    "serial",
    "monitor"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pioarduino/pioarduino-node-helpers/issues"
  },
  "homepage": "https://github.com/pioarduino",
  "dependencies": {
    "global-agent": "^3.0.0",
    "got": "^11.8.6",
    "jsonrpc-lite": "~2.1.1",
    "semver": "^7.5.4",
    "tar": "~6.2.0",
    "tcp-port-used": "~1.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "~14",
    "eslint": "~8.56.0",
    "eslint-import-resolver-webpack": "~0.13.8",
    "eslint-plugin-import": "~2.29.1",
    "prettier": "~3.2.4",
    "webpack": "~5.90.0",
    "webpack-cli": "~5.1.4"
  }
}
